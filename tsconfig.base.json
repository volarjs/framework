{
	"compilerOptions": {
		"target": "ES2021",
		"lib": [
			"WebWorker",
			"ES2021",
		],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"sourceMap": true,
		"composite": true,
		"declaration": true,
		"strict": true,
		"alwaysStrict": false,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"verbatimModuleSyntax": true,
		"baseUrl": "./",
		"paths": {
			"@volar/*": [
				"packages/*/src"
			],
		},
		"noEmit": true,
	},
	"include": [
		"packages/*/src",
		"packages/*/tests",
	],
}